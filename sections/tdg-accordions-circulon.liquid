<script>
  document.addEventListener('DOMContentLoaded', function () {
           const accordions = document.querySelectorAll('.accordion-amlas');
           accordions.forEach(accordion => {
               accordion.addEventListener('click', function () {
                   this.classList.toggle('active');
                   const content = this.querySelector('.accordion-amlas-content');
                   if (content.style.display === "block") {
                       content.style.display = "none";
                   } else {
                       content.style.display = "block";
                   }
               });
           });

           const seeMoreButton = document.getElementById('see-more-button');
           const hiddenAccordions = document.querySelectorAll('.accordion-amlas.show-more');

           seeMoreButton.addEventListener('click', function () {
               if (this.textContent === 'See More') {
                   hiddenAccordions.forEach(accordion => {
                       accordion.style.display = 'block';
                   });
                   this.textContent = 'Show Less';
               } else {
                   hiddenAccordions.forEach(accordion => {
                       accordion.style.display = 'none';
                   });
                   this.textContent = 'See More';
               }
           });

           // Initially hide the additional accordions
           hiddenAccordions.forEach(accordion => {
               accordion.style.display = 'none';
           });
       });
</script>
